{
  "name": "base_operativo",
  "version": "1.0.0",
  "description": "",
  "main": "index.js",
  "scripts": {
    "cm": "cz",
    "dev": "nodemon",
    "build": "tsc --project tsconfig.json && tsc-alias -p tsconfig.json",
    "clear": "rimraf build/",
    "clean_build": "npm run clear && npm run build",
    "migrate": "npx sequelize db:migrate --options-path ./src/data/postgreSQL/storage/.sequelizerc",
    "seed": "npx sequelize db:seed:all --options-path ./src/data/postgreSQL/storage/.sequelizerc",
    "migrate:generate": "npx sequelize migration:generate --options-path ./src/data/postgreSQL/storage/.sequelizerc --name",
    "seed:generate": "npx sequelize seed:generate --options-path ./src/data/postgreSQL/storage/.sequelizerc --name",
    "reset": "ts-node scripts/clearDB.ts && npm run migrate && npm run seed",
    "lint": "eslint . --ext .ts",
    "prettier": "prettier --check .",
    "lint:fix": "eslint . --ext .ts --fix",
    "prettier:fix": "prettier --write .",
    "prepare": "husky install"
  },
  "author": "juandav9312",
  "license": "ISC",
  "dependencies": {
    "dotenv": "^16.3.1",
    "env-var": "^7.4.1",
    "express": "^4.18.2",
    "jsonwebtoken": "^9.0.2",
    "pg": "^8.11.3",
    "pg-hstore": "^2.3.4",
    "sequelize": "^6.35.2",
    "ts-node": "^10.9.2",
    "yup": "^1.3.3"
  },
  "devDependencies": {
    "@types/bcryptjs": "^2.4.6",
    "@types/express": "^4.17.21",
    "@types/jsonwebtoken": "^9.0.5",
    "@types/node": "^20.11.0",
    "commitizen": "^4.3.0",
    "cz": "^1.8.2",
    "eslint": "^8.56.0",
    "eslint-config-prettier": "^9.1.0",
    "eslint-plugin-node": "^11.1.0",
    "husky": "^8.0.3",
    "lint-staged": "^15.2.0",
    "nodemon": "^3.0.2",
    "prettier": "^3.2.4",
    "rimraf": "^5.0.5",
    "sequelize-cli": "^6.6.2",
    "tsc-alias": "^1.8.8",
    "typescript": "^5.3.3"
  },
  "config": {
    "commitizen": {
      "path": "cz-conventional-changelog"
    }
  },
  "lint-staged": {
    "**/*": "prettier --write --ignore-unknown",
    "*.ts": "eslint --cache --fix",
    "*.{js,css,md}": "prettier --write"
  }
}
